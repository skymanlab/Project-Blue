<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserManageActivity">

    <!-- main -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#ebe8ff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="당신은 자신의 데이터를 입력합니다."
                android:textAlignment="center"></TextView>
        </LinearLayout>

        <!-- content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- content 1. tab button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:background="#e6edfa">

                <Button
                    android:id="@+id/userdata_user_input_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@color/selectItemBackground"
                    android:text="기본 정보 입력"
                    android:textColor="@color/selectItemTextColor"></Button>

                <Button
                    android:id="@+id/userdata_user_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/selectItemBackground"
                    android:text="정보 확인"
                    android:textColor="@color/selectItemTextColor"></Button>
                <Button
                    android:id="@+id/userdata_user_friend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:background="@color/selectItemBackground"
                    android:text="친구 목록"
                    android:textColor="@color/selectItemTextColor"></Button>
            </LinearLayout>

            <!-- divider -->
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" /><!-- End of divider -->

            <!-- pager-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e6edfa">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/userdata_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.viewpager.widget.ViewPager>
            </LinearLayout>
        </LinearLayout><!-- End of content-->
    </LinearLayout><!-- End of main-->

</androidx.constraintlayout.widget.ConstraintLayout>