<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BilliardInputActivity">

    <!-- main -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorActivityTitle"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/billiard_input_title"
                android:textAlignment="center"></TextView>
        </LinearLayout>

        <!-- content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorActivityContent"
            android:orientation="vertical">

            <!-- content 1. view -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

            </LinearLayout><!-- End of content 1 -->

            <!-- divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" /> <!-- End of divider -->

            <!-- content 2. input data-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <!-- content 2-1. default data (targetScore, speciality) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackgroundSecond"
                    android:orientation="horizontal">

                    <!-- content 2-1-1. targetScore -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="@string/billiard_input_target_score"
                            android:textAlignment="center"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="?android:attr/listDivider" />

                        <Spinner
                            android:id="@+id/billiard_input_sp_target_score"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"></Spinner>
                    </LinearLayout><!-- End of content 2-1-1 -->

                    <!-- divider -->
                    <View
                        android:id="@+id/divider3"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="?android:attr/listDivider" /><!-- End of divider -->

                    <!-- content 2-1-2. speciality -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="@string/billiard_input_speciality"
                            android:textAlignment="center"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="?android:attr/listDivider" />

                        <Spinner
                            android:id="@+id/billiard_input_sp_speciality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"></Spinner>
                    </LinearLayout><!-- End of content 2-1-2 -->
                </LinearLayout><!-- End of content 2-1 -->

                <!-- content 2-2. date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackgroundThird"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/billiard_input_date"
                        android:textAlignment="textStart"></TextView>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/billiard_input_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/billiard_input_date_content"
                        android:textAlignment="textStart"></TextView>

                    <TextView
                        android:id="@+id/billiard_input_re_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorBackgroundPrimary"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/billiard_input_date_re"
                        android:textColor="@color/colorBackgroundThird"></TextView>
                </LinearLayout><!-- End of content 2-2 -->

                <!-- content 2-3. winner -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackgroundSecond"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/billiard_input_winner"
                        android:textAlignment="textStart"></TextView>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="?android:attr/listDivider" />

                    <Spinner
                        android:id="@+id/billiard_input_sp_player"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"></Spinner>
                </LinearLayout><!-- End of content 2-3 -->

                <!-- content 2-4. score -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackgroundThird"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/billiard_input_score"
                        android:textAlignment="textStart"></TextView>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="?android:attr/listDivider" />

                    <EditText
                        android:id="@+id/billiard_input_score_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="text|numberDecimal"></EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/billiard_input_score_colon"
                        android:textAlignment="center"></TextView>

                    <EditText
                        android:id="@+id/billiard_input_score_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="text|numberDecimal"></EditText>
                </LinearLayout><!-- End of content 2-4 -->

                <!-- content 2-5. play time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackgroundThird"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/billiard_input_play_time"
                        android:textAlignment="textStart"></TextView>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="?android:attr/listDivider" />

                    <EditText
                        android:id="@+id/billiard_input_play_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text|numberDecimal"></EditText>
                </LinearLayout><!-- End of content 2-5 -->

                <!-- content 2-6. cost -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackgroundSecond"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/billiard_input_cost"
                        android:textAlignment="textStart"></TextView>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="?android:attr/listDivider" />

                    <EditText
                        android:id="@+id/billiard_input_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text|numberDecimal"></EditText>
                </LinearLayout><!-- End of content 2-6 -->

                <!-- content 2-7. input button -->
                <Button
                    android:id="@+id/billiard_input_bt_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackgroundPrimary"
                    android:text="@string/billiard_input_bt_input"
                    android:textColor="@color/colorTextPrimary">
                </Button><!-- End of content 2-7 -->

            </LinearLayout><!-- End of content 2 -->

        </LinearLayout><!-- End of content -->
    </LinearLayout><!-- End of main -->

</androidx.constraintlayout.widget.ConstraintLayout>