<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <!-- content 1. id -->
    <TextView
        android:id="@+id/c_lv_friend_data_id"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:background="@color/colorCustomBackgroundPrimary"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/colorCustomTextPrimary" />

    <!-- content 2. information -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- content 2-1. name -->
        <TextView
            android:id="@+id/c_lv_friend_data_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@color/colorCustomBackgroundPrimary"
            android:text="장동익"
            android:textAlignment="center"
            android:textColor="@color/colorCustomTextPrimary" />

        <!-- content 2-2. game record, recent play date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorCustomBackgroundPrimary"
            android:orientation="horizontal"
            android:padding="2dp">

            <!-- content 2-2-1. game record -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@color/colorCustomTableColumnName"
                    android:text="@string/c_lv_friend_data_game_record"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/c_lv_friend_data_game_record"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorCustomTableColumn"
                    android:text="@string/c_lv_friend_data_game_record_default"
                    android:textAlignment="center" />
            </LinearLayout><!-- End of content 2-2-1 -->

            <!-- content 2-2-2. recent play date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@color/colorCustomTableColumnName"
                    android:text="@string/c_lv_friend_data_recent_play_date"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/c_lv_friend_data_recent_play_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorCustomTableColumn"
                    android:text="@string/c_lv_friend_data_recent_play_date_default"
                    android:textAlignment="center" />
            </LinearLayout><!-- End of content 2-2-2 -->
        </LinearLayout><!-- End of content 2-2 -->

        <!-- divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" /><!-- End of divider -->

        <!-- content 2-3. total play time, total cost -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorCustomBackgroundPrimary"
            android:orientation="horizontal"
            android:padding="2dp">

            <!-- content 2-3-1. total play time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@color/colorCustomTableColumnName"
                    android:text="@string/c_lv_friend_data_total_play_time"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/c_lv_friend_data_total_play_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorCustomTableColumn"
                    android:text="@string/c_lv_friend_data_total_play_time_default"
                    android:textAlignment="center" />
            </LinearLayout> <!-- End of content 2-3-1 -->

            <!-- content 2-3-2. total cost -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@color/colorCustomTableColumnName"
                    android:text="@string/c_lv_friend_data_total_cost"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/c_lv_friend_data_total_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorCustomTableColumn"
                    android:text="@string/c_lv_friend_data_total_cost_default"
                    android:textAlignment="center" />
            </LinearLayout><!-- End of content 2-3-2 -->
        </LinearLayout><!-- End of content 2-3 -->
    </LinearLayout><!-- End of content 2 -->
</LinearLayout>
