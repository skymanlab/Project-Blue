<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- main -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorActivityTitle"
            android:gravity="top"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/main_title"></TextView>
        </LinearLayout><!-- End of title -->

        <!-- content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorActivityContent"
            android:gravity="top|center"
            android:orientation="vertical">

            <!-- content 1. icon image -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:src="@drawable/icon_noline"></ImageView>

            <!-- content 2. inputData -->
            <Button
                android:id="@+id/main_bt_billiard_input"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/colorBackgroundPrimary"
                android:text="@string/main_bt_billiard_input"
                android:textColor="@color/colorTextPrimary"></Button>

            <!-- content 3. viewData -->
            <Button
                android:id="@+id/main_bt_billiard_display"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/colorBackgroundPrimary"
                android:text="@string/main_bt_billiard_display"
                android:textColor="@color/colorTextPrimary"></Button>

            <!-- content 4. userManager -->
            <Button
                android:id="@+id/main_bt_user_manager"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/colorBackgroundPrimary"
                android:text="@string/main_bt_user_manager"
                android:textColor="@color/colorTextPrimary"></Button>

            <!-- content 4. statisticsManager -->
            <Button
                android:id="@+id/main_bt_statistics_manager"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/colorBackgroundPrimary"
                android:text="@string/main_bt_statistics_manager"
                android:textColor="@color/colorTextPrimary"></Button>

            <!-- content 5. DevelopmentInfo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|end"
                android:orientation="vertical">

                <Button
                    android:id="@+id/main_bt_app_info"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:background="@color/colorBackgroundSecond"
                    android:text="@string/main_bt_development_info"
                    android:textColor="@color/colorTextPrimary"></Button>

            </LinearLayout>

        </LinearLayout><!-- End of content -->

        <!-- footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorActivityFooter"
            android:gravity="bottom"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_footer"
                android:textAlignment="center"></TextView>
        </LinearLayout><!-- End of footer -->
    </LinearLayout><!-- End of main -->
</androidx.constraintlayout.widget.ConstraintLayout>