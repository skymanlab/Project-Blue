<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BilliardInputActivity">

    <!-- main -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorActivityTitle"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/billiard_input_title"
                android:textAlignment="center"></TextView>
        </LinearLayout>

        <!-- content 1. input data-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- content 1-1. default data (targetScore, speciality) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSecondBackground"
                android:orientation="horizontal">

                <!-- content 1-1-1. targetScore -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="@string/billiard_input_target_score"
                        android:textAlignment="center"></TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="?android:attr/listDivider" />

                    <Spinner
                        android:id="@+id/billiard_input_sp_target_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"></Spinner>
                </LinearLayout><!-- End of content 1-1-1 -->

                <!-- divider -->
                <View
                    android:id="@+id/divider3"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="?android:attr/listDivider" /><!-- End of divider -->

                <!-- content 1-1-2. speciality -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="@string/billiard_input_speciality"
                        android:textAlignment="center"></TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="?android:attr/listDivider" />

                    <Spinner
                        android:id="@+id/billiard_input_sp_speciality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"></Spinner>
                </LinearLayout><!-- End of content 1-1-2 -->
            </LinearLayout><!-- End of content 1-1 -->

            <!-- content 1-2. date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorThirdBackground"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/billiard_input_date"
                    android:textAlignment="textStart"></TextView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/billiard_input_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/billiard_input_date_content"
                    android:textAlignment="textStart"></TextView>

                <TextView
                    android:id="@+id/billiard_input_re_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorPrimaryBackground"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/billiard_input_date_re"
                    android:textColor="@color/colorTextPrimaryBackground"></TextView>
            </LinearLayout><!-- End of content 1-2 -->

            <!-- content 1-3. winner -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSecondBackground"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/billiard_input_winner"
                    android:textAlignment="textStart"></TextView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="?android:attr/listDivider" />

                <Spinner
                    android:id="@+id/billiard_input_sp_player"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></Spinner>
            </LinearLayout><!-- End of content 1-3 -->

            <!-- content 1-4. score -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorThirdBackground"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="@string/billiard_input_score"
                    android:textAlignment="textStart"></TextView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="?android:attr/listDivider" />

                <EditText
                    android:id="@+id/billiard_input_score_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text|numberDecimal"></EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/billiard_input_score_colon"
                    android:textAlignment="center"></TextView>

                <EditText
                    android:id="@+id/billiard_input_score_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text|numberDecimal"></EditText>
            </LinearLayout><!-- End of content 1-4 -->

            <!-- content 1-5. cost -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSecondBackground"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="@string/billiard_input_cost"
                    android:textAlignment="textStart"></TextView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="?android:attr/listDivider" />

                <EditText
                    android:id="@+id/billiard_input_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|numberDecimal"></EditText>
            </LinearLayout><!-- End of content 1-5 -->

            <!-- content 1-6. play time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorThirdBackground"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="@string/billiard_input_play_time"
                    android:textAlignment="textStart"></TextView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="?android:attr/listDivider" />

                <EditText
                    android:id="@+id/billiard_input_play_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|numberDecimal"></EditText>
            </LinearLayout><!-- End of content 1-6 -->

            <!-- content 1-7. input button -->
            <Button
                android:id="@+id/billiard_input_bt_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryBackground"
                android:text="@string/billiard_input_bt_input"
                android:textColor="@color/colorTextPrimaryBackground"></Button><!-- End of content 1-7 -->
        </LinearLayout><!-- End of content 1 -->

        <!-- divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" /> <!-- End of divider -->

        <!-- content 2. view -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- content 2-1. all billiard data -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorSecondBackground">

                <ListView
                    android:id="@+id/billiard_input_lv_all_billiard_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></ListView>
            </LinearLayout><!-- End of content 2-1 -->
        </LinearLayout><!-- End of content 2 -->

        <!-- divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" /> <!-- End of divider -->

        <!-- content 3. button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- content 3-1. comment -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorThirdBackground"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/billiard_input_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/billiard_input_comment"
                    android:textAlignment="center"></TextView>
            </LinearLayout><!-- End of content 3-1 -->

            <!-- content 3-2. button group -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSecondBackground"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/billiard_input_bt_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryBackground"
                    android:text="@string/billiard_input_bt_display"
                    android:textColor="@color/colorTextPrimaryBackground"></Button>

                <Button
                    android:id="@+id/billiard_input_bt_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryBackground"
                    android:text="@string/billiard_input_bt_delete"
                    android:textColor="@color/colorTextPrimaryBackground"></Button>
            </LinearLayout><!-- End of content 3-2 -->
        </LinearLayout><!-- End of content 3 -->

    </LinearLayout><!-- End of main -->

</androidx.constraintlayout.widget.ConstraintLayout>