<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".factivity.user.UserInput">

    <!-- TODO: Update blank fragment layout -->
    <!-- main -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- title-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/f_user_input_title"
                android:textAlignment="center"></TextView>
        </LinearLayout><!-- End of title-->

        <!-- content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- content 1. name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSecondBackground"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:gravity="start"
                    android:paddingLeft="10dp"
                    android:text="@string/f_user_input_name"></TextView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?android:attr/listDivider" />

                <EditText
                    android:id="@+id/f_user_input_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/f_user_input_name_hint"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"></EditText>
            </LinearLayout><!-- End of content 1 -->

            <!-- content 2. target score -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorThirdBackground"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:gravity="start"
                    android:paddingLeft="10dp"
                    android:text="@string/f_user_input_target_score"></TextView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?android:attr/listDivider" />

                <EditText
                    android:id="@+id/f_user_input_target_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/f_user_input_target_score_hint"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"></EditText>
            </LinearLayout><!-- End of content 2 -->

            <!-- content 3. speciality -->
            <LinearLayout
                android:id="@+id/userdata_speciality"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorSecondBackground"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:gravity="start"
                    android:paddingLeft="10dp"
                    android:text="@string/f_user_input_speciality"></TextView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?android:attr/listDivider" />

                <RadioGroup
                    android:id="@+id/f_user_input_speciality"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/f_user_input_speciality_three_cushion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="@string/f_user_input_speciality_three_cushion" />

                    <RadioButton
                        android:id="@+id/f_user_input_speciality_four_ball"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/f_user_input_speciality_four_ball" />

                    <RadioButton
                        android:id="@+id/f_user_input_speciality_pocket_ball"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/f_user_input_speciality_pocket_ball" />
                </RadioGroup>
            </LinearLayout><!-- End of content 3 -->

            <!-- content 4. input data button-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorThirdBackground"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:padding="4dp">

                <Button
                    android:id="@+id/f_user_input_bt_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryBackground"
                    android:text="@string/f_user_input_bt_save"
                    android:textColor="@color/colorTextPrimaryBackground"></Button>

                <Button
                    android:id="@+id/f_user_input_bt_modify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryBackground"
                    android:text="@string/f_user_input_bt_modify"
                    android:textColor="@color/colorTextPrimaryBackground"></Button>

                <Button
                    android:id="@+id/f_user_input_bt_delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryBackground"
                    android:text="@string/f_user_input_bt_delete"
                    android:textColor="@color/colorTextPrimaryBackground"></Button>
            </LinearLayout><!-- End of content 4 -->
        </LinearLayout><!-- End of content -->
    </LinearLayout><!-- End of main -->
</FrameLayout>