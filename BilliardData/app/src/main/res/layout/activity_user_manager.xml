<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserManagerActivity">

    <!-- main -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorActivityTitle"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/userManager_title"
                android:textAlignment="center"></TextView>
        </LinearLayout>

        <!-- content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- content 1. tab -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/userManager_tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPagerTab" /><!-- End of content 1 -->

            <!-- divider -->
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" /><!-- End of divider -->

            <!-- content 2. pager-->
<!--            <androidx.viewpager.widget.ViewPager-->
<!--                android:id="@+id/userManager_viewPager"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent" />&lt;!&ndash; End of content 2 &ndash;&gt;-->

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/userManager_viewPager2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout><!-- End of content-->
    </LinearLayout><!-- End of main-->

</androidx.constraintlayout.widget.ConstraintLayout>