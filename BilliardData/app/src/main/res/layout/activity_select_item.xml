<?xml version="1.0" encoding="utf-8"?>

<!-- main -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <!-- content 1. id -->
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@color/selectItemBackground"
        android:gravity="center">

        <TextView
            android:id="@+id/selectitem_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textAlignment="gravity"
            android:textColor="@color/selectItemTextColor"></TextView>

    </LinearLayout><!-- End of content 1 -->

    <!-- content 2. infomation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <!-- content 2-1. date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@color/selectItemBackground"
            android:gravity="center">

            <TextView
                android:id="@+id/selectitem_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020년 9월 16일 08:15:56"
                android:textAlignment="textStart"
                android:textColor="@color/selectItemTextColor"></TextView>
        </LinearLayout><!-- End of content 2 -->

        <!-- content 2-2. target score, speciality, play time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/selectItemBackground"
            android:orientation="horizontal"
            android:padding="2dp">

            <!-- content 2-2-1. target score -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@color/selectItemTableBar"
                    android:text="수지"
                    android:textAlignment="center"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/selectitem_target_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/selectItemTableColum"
                    android:text="17"
                    android:textAlignment="center"></TextView>
            </LinearLayout><!-- End of content 2-2-1 -->

            <!-- content 2-2-2. speciality -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@color/selectItemTableBar"
                    android:text="종목"
                    android:textAlignment="center"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/selectitem_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/selectItemTableColum"
                    android:text="3구"
                    android:textAlignment="center"></TextView>
            </LinearLayout><!-- End of content 2-2-2 -->

            <!-- content 2-2-3. play time-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@color/selectItemTableBar"
                    android:text="게임 시간"
                    android:textAlignment="center"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/selectitem_play_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/selectItemTableColum"
                    android:text="69분"
                    android:textAlignment="center"></TextView>
            </LinearLayout><!-- End of content 2-2-3 -->
        </LinearLayout><!-- End of content 2-2 -->

        <!-- divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" /><!-- End of divider -->

        <!-- content 2-3. victoree, score, cost -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/selectItemBackground"
            android:orientation="horizontal"
            android:padding="2dp">

            <!-- content 2-3-1. victoree -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@color/selectItemTableBar"
                    android:text="승리자"
                    android:textAlignment="center"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/selectitem_victoree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:text="장동익"
                    android:textAlignment="center"></TextView>
            </LinearLayout> <!-- End of content 2-3-1 -->

            <!-- content 2-3-2. score -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@color/selectItemTableBar"
                    android:text="스코어"
                    android:textAlignment="center"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/selectitem_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/selectItemTableColum"
                    android:text="17:20"
                    android:textAlignment="center"></TextView>
            </LinearLayout><!-- End of content 2-3-2 -->

            <!-- content 2-3-3. cost -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@color/selectItemTableBar"
                    android:text="금액"
                    android:textAlignment="center"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/selectitem_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/selectItemTableColum"
                    android:text="8,700원"
                    android:textAlignment="center"></TextView>
            </LinearLayout><!-- End of content 2-3-3 -->
        </LinearLayout><!-- End of content 2-3 -->
    </LinearLayout><!-- End of content 2 -->
</LinearLayout><!-- End of main -->
